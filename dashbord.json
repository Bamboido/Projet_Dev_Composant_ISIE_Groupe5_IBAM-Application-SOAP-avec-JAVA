{
  "title": "SOAP Services Metrics",
  "description": "Dashboard pour monitorer les services SOAP",
  "tags": ["soap", "metrics"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Requêtes SOAP par méthode",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(soap_requests_by_method_total) by (method)",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      }
    },
    {
      "id": 2,
      "title": "Taux d'erreurs par méthode",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum(soap_errors_by_method_total) by (method)",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 3,
      "title": "Temps de réponse des méthodes SOAP",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(soap_response_time_seconds_sum[5m]) / rate(soap_response_time_seconds_count[5m])",
          "legendFormat": "{{method}} - moyenne",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 4,
      "title": "Nombre total de requêtes SOAP",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(soap_requests_total)",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 80}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Nombre total d'erreurs",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(soap_errors_total)",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 10}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Taux d'erreur global",
      "type": "gauge",
      "targets": [
        {
          "expr": "(sum(soap_errors_total) / sum(soap_requests_total)) * 100",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "red", "value": 10}
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Requêtes par minute",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(soap_requests_total[1m]) * 60",
          "legendFormat": "Req/min",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "fieldConfig": {
        "defaults": {
          "unit": "reqm",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 8,
      "title": "Top méthodes les plus lentes",
      "type": "table",
      "targets": [
        {
          "expr": "topk(5, rate(soap_response_time_seconds_sum[5m]) / rate(soap_response_time_seconds_count[5m]))",
          "format": "table",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "continuous-BlPu"}
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "refresh": "10s",
  "schemaVersion": 36,
  "version": 1
}